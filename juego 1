#include <SFML/Graphics.hpp>

int main()
{
    sf::RenderWindow window(sf::VideoMode(800, 600), "Conejo Aventurero");

    sf::Texture rabbitTexture;
    rabbitTexture.loadFromFile("rabbit.png"); // Carga la imagen del conejo
    sf::Sprite rabbitSprite(rabbitTexture);
    rabbitSprite.setPosition(400, 300); // Posici√≥n inicial del conejo

    while (window.isOpen())
    {
        sf::Event event;
        while (window.pollEvent(event))
        {
            if (event.type == sf::Event::Closed)
                window.close();
        }

        if (sf::Keyboard::isKeyPressed(sf::Keyboard::Left))
        {
            // Mueve el conejo hacia la izquierda
            rabbitSprite.move(-5, 0);
        }
        else if (sf::Keyboard::isKeyPressed(sf::Keyboard::Right))
        {
            // Mueve el conejo hacia la derecha
            rabbitSprite.move(5, 0);
        }
        else if (sf::Keyboard::isKeyPressed(sf::Keyboard::Space))
        {
            // Conejo salta
            rabbitSprite.move(0, -10);
        }

        window.clear();
        window.draw(rabbitSprite);
        window.display();
    }

    return 0;
}
